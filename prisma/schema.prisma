// This is your complete, corrected schema.
// It merges the 'Client' and 'User' models using a 'role' field.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==========================================
// AUTH & USER MODELS (UNIFIED)
// ==========================================

// ADDED: A Role enum to define the capabilities of a user.
enum Role {
  EVALUATOR // A worker who completes tasks.
  CLIENT // A customer who creates datasets.
  ADMIN // A superuser for your system.
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// THE UNIFIED USER MODEL
// This model now represents BOTH workers and clients.
model User {
  id            String    @id @default(cuid())
  name          String? // For web users, can be company or personal name.
  email         String?   @unique
  emailVerified DateTime?
  image         String? // Avatar from Google or other providers.
  password      String
  // Telegram fields remain for workers.
  telegramId    String?   @unique
  username      String?
  firstName     String?
  lastName      String?

  // Worker-specific fields.
  reputation Int   @default(100)
  balance    Float @default(0.0)

  // ADDED: The role field determines if the user is a CLIENT or an EVALUATOR.
  role Role @default(EVALUATOR)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // --- RELATIONSHIPS ---
  accounts Account[]
  sessions Session[]
  votes    Vote[]

  // A user with the CLIENT role can own many datasets.
  datasets Dataset[]

  // REMOVED: The `tasks: Task[]` relation was incorrect and has been removed.
  // The link between a User and a Task is correctly handled by the `Vote` model.
}

// ==========================================
// DATASET, TASK, & VOTE MODELS
// ==========================================

model Dataset {
  id          String   @id @default(cuid())
  title       String // e.g. "Nike - Shoe Sentiment Analysis"
  description String? // e.g. "Select Positive if the user sounds happy."
  status      String   @default("ACTIVE") // ACTIVE, PAUSED, COMPLETED
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Template config
  dataType      String // TEXT or IMAGE
  question      String // "Is this sentiment positive?"
  options       Json // Changed to Json for more flexibility e.g., ["Yes", "No"]
  reward        Int    @default(50)
  requiredVotes Int    @default(2)

  // FIXED: The dataset is now linked to the unified User model.
  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  tasks Task[]

  @@index([ownerId])
}

model Task {
  id        String  @id @default(cuid())
  datasetId String
  dataset   Dataset @relation(fields: [datasetId], references: [id], onDelete: Cascade)

  // Content (Using flexible Json type)
  content Json

  // Status & Consensus
  collectedVotes Int    @default(0)
  status         String @default("ACTIVE")

  // --- NEW FIELD HERE ---
  imageUrls String[] // Array of strings, optional (nullable)
  // ----------------------

  // Validation fields (optional)
  correctAnswer String?
  isValidation  Boolean @default(false)

  createdAt DateTime @default(now())
  votes     Vote[]

  @@index([datasetId])
  @@index([status, collectedVotes])
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  taskId    String
  selection String
  isCorrect Boolean?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  // A user can only vote once on any given task.
  @@unique([userId, taskId])
}
