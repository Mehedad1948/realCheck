// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "sqlite" for local dev
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique
  username     String?
  firstName    String?
  balance      Float    @default(0.0)
  reputation   Float    @default(100.0) // Accuracy score
  createdAt    DateTime @default(now())
  
  votes        Vote[]
}

model Task {
  id            String   @id @default(uuid())
  // We use String for type to allow flexibility, or you can use an Enum
  type          String   
  question      String
  options       String[] // Required for Postgres
  reward        Int
  correctAnswer String?  @map("correct_answer") // Maps camelCase JS to snake_case DB
  
  // --- NEW FIELDS TO MATCH YOUR TYPE ---
  textContent   String?  @map("text_content")   // Optional: matches text_content
  imageUrls     String[] @map("image_urls")     // Optional: matches image_urls
  isValidation  Boolean  @default(false) @map("is_validation")
  
  // (Old generic content field - you can remove this if you don't use it anymore)
  // content    Json?

  createdAt     DateTime @default(now())
  votes         Vote[]
}

model Vote {
  id        String   @id @default(cuid())
  userId    String
  taskId    String
  selection String
  isCorrect Boolean? // Only populated for validation tasks
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  task      Task     @relation(fields: [taskId], references: [id])

  @@unique([userId, taskId]) // Prevent double voting
}
